<%=simple_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :userid %><br />
    <%= f.text_field :userid %> 
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :dob %><br />
    <%= f.date_select :dob,:start_year =>Time.now.year-110,:end_year=>Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :normaltravelfee %><br />
    <%= f.number_field :normaltravelfee %>
  </div>
  <div class="field">
    <%= f.label :gender %><br/>
    <%= f.label :gender,"Male",:value=>true%>
    <%= f.radio_button:gender,"Male",:checked=>true %>
    
    <%= f.label :gender,"Female",:value=>false %>
    <%= f.radio_button:gender, "Female"%><br/>
  </div>
  <div class="field">
    <%= f.label :team %><br />
    <%= f.text_field :team %>
  </div>
  <div class="field">
    <%= f.label :NRCnumber %><br />
    <%= f.text_field :NRCnumber %>
  </div>
  <div class="field">
    <%= f.label :year_of_entry %><br />
    <%= f.number_field :year_of_entry %>
  </div>
  <div class="field">
    <%= f.label :date_of_entry %><br />
    <%= f.date_select :date_of_entry %>
  </div>
  <div class="field">
    <%= f.label :leaveday %><br />
    <%= f.number_field :leaveday %>
  </div>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>
  
   <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
